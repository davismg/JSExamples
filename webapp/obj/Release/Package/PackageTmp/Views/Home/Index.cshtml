                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <div class="well well-sm well-light">
                    <h4 class="txt-color-blueLight">Groups <span class="semi-bold">Over Budget</span> <span class="pull-right txt-color-blueLight">6<i style="padding-left: 10px;"  class="fa fa-arrow-circle-down"></i></span></h4>
                    <br>
                    <div class="sparkline txt-color-blueLight text-center"
                         data-sparkline-type="bar"
                         data-sparkline-width="96%"
                         data-sparkline-barwidth="13"
                         data-sparkline-barspacing="5"
                         data-sparkline-height="80px">
                        4,3,5,7,9,9,8,7,6,6,4,7,8,4
                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                <div class="well well-sm well-light">
                    <h4 class="txt-color-blueLight">Headcount <span class="semi-bold">Change YTD</span> <span class="pull-right txt-color-blueLight">20.4%<i style="padding-left: 10px;" class="fa fa-arrow-circle-up"></i></span></h4>
                    <br>
                    <div class="sparkline txt-color-blueLight text-center"
                         data-sparkline-type="bar"
                         data-sparkline-width="96%"
                         data-sparkline-barwidth="13"
                         data-sparkline-barspacing="5"
                         data-sparkline-height="80px">
                        4,3,5,7,9,9,8,7,6,6,4,7,8,4
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
<!-- END MAIN CONTENT -->
@section pagespecific {
    <script type="text/javascript">
        $(document).ready(function() {

                pageSetUp();

                var lineOptions = {
                    ///Boolean - Whether grid lines are shown across the chart
                    scaleShowGridLines: true,
                    //String - Colour of the grid lines
                    scaleGridLineColor: "rgba(0,0,0,.05)",
                    //Number - Width of the grid lines
                    scaleGridLineWidth: 1,
                    //Boolean - Whether the line is curved between points
                    bezierCurve: true,
                    //Number - Tension of the bezier curve between points
                    bezierCurveTension: 0.4,
                    //Boolean - Whether to show a dot for each point
                    pointDot: true,
                    //Number - Radius of each point dot in pixels
                    pointDotRadius: 4,
                    //Number - Pixel width of point dot stroke
                    pointDotStrokeWidth: 1,
                    //Number - amount extra to add to the radius to cater for hit detection outside the drawn point
                    pointHitDetectionRadius: 20,
                    //Boolean - Whether to show a stroke for datasets
                    datasetStroke: true,
                    //Number - Pixel width of dataset stroke
                    datasetStrokeWidth: 2,
                    //Boolean - Whether to fill the dataset with a colour
                    datasetFill: true,
                    //Boolean - Re-draw chart on page resize
                    responsive: true,
                    //String - A legend template
                    legendTemplate:
                        "<ul class=\"<%=name.toLowerCase()%>-legend\"><% for (var i=0; i<datasets.length; i++){%><li><span style=\"background-color:<%=datasets[i].lineColor%>\"></span><%if(datasets[i].label){%><%=datasets[i].label%><%}%></li><%}%></ul>"
                };

                var ytdBudgetVsActualAll = {
                    labels: ["January", "February", "March", "April", "May", "June", "July"],
                    datasets: [
                        {
                            label: "Budget",
                            fillColor: "rgba(220,220,220,0.2)",
                            strokeColor: "rgba(220,220,220,1)",
                            pointColor: "rgba(220,220,220,1)",
                            pointStrokeColor: "#fff",
                            pointHighlightFill: "#fff",
                            pointHighlightStroke: "rgba(220,220,220,1)",
                            data: [65, 59, 80, 81, 56, 55, 40]
                        },
                        {
                            label: "Actuals",
                            fillColor: "rgba(151,187,205,0.2)",
                            strokeColor: "rgba(151,187,205,1)",
                            pointColor: "rgba(151,187,205,1)",
                            pointStrokeColor: "#fff",
                            pointHighlightFill: "#fff",
                            pointHighlightStroke: "rgba(151,187,205,1)",
                            data: [28, 48, 40, 19, 86, 27, 90]
                        }
                    ]
                };

                var ytdBudgetVsActualException = {
                    labels: ["January", "February", "March", "April", "May", "June", "July"],
                    datasets: [
                        {
                            label: "Budget",
                            fillColor: "rgba(220,220,220,0.2)",
                            strokeColor: "rgba(220,220,220,1)",
                            pointColor: "rgba(220,220,220,1)",
                            pointStrokeColor: "#fff",
                            pointHighlightFill: "#fff",
                            pointHighlightStroke: "rgba(220,220,220,1)",
                            data: [35, 45, 32, 70, 81, 61, 10]
                        },
                        {
                            label: "Actuals",
                            fillColor: "rgba(151,187,205,0.2)",
                            strokeColor: "rgba(151,187,205,1)",
                            pointColor: "rgba(151,187,205,1)",
                            pointStrokeColor: "#fff",
                            pointHighlightFill: "#fff",
                            pointHighlightStroke: "rgba(151,187,205,1)",
                            data: [42, 54, 10, 60, 86, 91, 37]
                        }
                    ]
                };

                // render chart
                var ctx = document.getElementById("chartYTDBudgetVsActualAll").getContext("2d");
                var chartYTDBudgetVsActualAll = new Chart(ctx).Line(ytdBudgetVsActualAll, lineOptions);

                ctx = document.getElementById("chartYTDBudgetVsActualException").getContext("2d");
                var chartYTDBudgetVsActualException = new Chart(ctx).Line(ytdBudgetVsActualException, lineOptions);

            });


    </script>
}